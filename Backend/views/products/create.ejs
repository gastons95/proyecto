<!DOCTYPE html>
<html lang="es">

<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1" />
  <link rel="stylesheet" href="/css/css.css" />
  <title>Crear nuevo producto</title>
</head>

<body>
  <h1>Crear producto</h1>

  <div class="form-wrapper">
    <form action="/products" method="POST" enctype="multipart/form-data">
      <label>Nombre:</label>
      <input type="text" name="name" value="<%= oldData.name || '' %>" required>
      <% if (errors?.name) { %>
        <p class="error"><%= errors.name.msg %></p>
      <% } %>

      <label>Descripción:</label>
      <textarea name="description" required><%= oldData.description || '' %></textarea>
      <% if (errors?.description) { %>
        <p class="error"><%= errors.description.msg %></p>
      <% } %>

      <label>Precio:</label>
      <input type="number" step="0.01" name="price" value="<%= oldData.price || '' %>" required>
      <% if (errors?.price) { %>
        <p class="error"><%= errors.price.msg %></p>
      <% } %>

      <label>Categoría:</label>
      <select name="categoryId" required>
        <% categories.forEach(category => { %>
          <option value="<%= category.id %>" <%= oldData.categoryId == category.id ? 'selected' : '' %>><%= category.name %></option>
        <% }) %>
      </select>

      <label>Marca:</label>
      <select name="brandId" required>
        <% brands.forEach(brand => { %>
          <option value="<%= brand.id %>" <%= oldData.brandId == brand.id ? 'selected' : '' %>><%= brand.name %></option>
        <% }) %>
      </select>

      <label>Color:</label>
      <select name="colorId" required>
        <% colors.forEach(color => { %>
          <option value="<%= color.id %>" <%= oldData.colorId == color.id ? 'selected' : '' %>><%= color.name %></option>
        <% }) %>
      </select>

      <label>Talle:</label>
      <select name="sizeId" required>
        <% sizes.forEach(size => { %>
          <option value="<%= size.id %>" <%= oldData.sizeId == size.id ? 'selected' : '' %>><%= size.name %></option>
        <% }) %>
      </select>

      <label>Imagen:</label>
      <input type="file" name="imagen" accept="image/*">

      <button type="submit">Crear</button>
    </form>
  </div>

  <a href="/products">Volver al listado</a>

  <script src="/javascripts/CyMdeProductos.js"></script>
</body>

</html>