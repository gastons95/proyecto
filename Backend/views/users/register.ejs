<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head.ejs') %>  
<body>
    <%- include('../partials/header.ejs') %>

    <section id="form-details">
       <form action="/users/register" method="POST" enctype="multipart/form-data">
          <h2>Registrate</h2>
          <hr>

          <input type="text" name="firstName" placeholder="Nombre" value="<%= oldData?.firstName || '' %>">
          <% if (errors?.firstName) { %>
            <span class="error"><%= errors.firstName.msg %></span>
          <% } %>

          <input type="text" name="lastName" placeholder="Apellido" value="<%= oldData?.lastName || '' %>">
          <% if (errors?.lastName) { %>
            <span class="error"><%= errors.lastName.msg %></span>
          <% } %>

          <input type="email" name="email" placeholder="Email" value="<%= oldData?.email || '' %>">
          <% if (errors?.email) { %>
            <span class="error"><%= errors.email.msg %></span>
          <% } %>

          <input type="text" name="phone" placeholder="Num Celular" value="<%= oldData?.phone || '' %>">
          <% if (errors?.phone) { %>
            <span class="error"><%= errors.phone.msg %></span>
          <% } %>

          <input type="password" name="password" placeholder="Contraseña">
          <% if (errors?.password) { %>
            <span class="error"><%= errors.password.msg %></span>
          <% } %>

          <input type="password" name="passwordConfirm" placeholder="Confirmar contraseña">
          <% if (errors?.passwordConfirm) { %>
            <span class="error"><%= errors.passwordConfirm.msg %></span>
          <% } %>

          <label for="image">Foto de perfil:</label>
          <input type="file" name="image">
          <% if (errors?.image) { %>
            <span class="error"><%= errors.image.msg %></span>
          <% } %>

          <!--<select name="hiden">
            <option value="user" <%= oldData?.category === 'user' ? 'selected' : '' %>>Usuario</option>
            <option value="admin" <%= oldData?.category === 'admin' ? 'selected' : '' %>>Administrador</option>
          </select> -->

          <button type="submit" class="btn btn-edit">Registrate</button>

          <p>¿Tenés cuenta? - <a href="/users/login">Iniciá sesión</a></p>
      </form>
    </section>

    <%- include('../partials/footer.ejs') %> 

    <script src="https://kit.fontawesome.com/efd6aa0e68.js" crossorigin="anonymous"></script>
    <script src="/javascripts/registro.js"></script>
    <script src="/javascripts/script.js"></script>
</body>
</html>